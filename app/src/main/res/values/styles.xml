<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/md_blue_800</item>
    </style>

    <style name="SpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/TextAppearanceSpinnerItem</item>
    </style>

    <style name="TextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextHeading" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="TextSubHeading" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_subheading</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">0dip</item>
    </style>

    <style name="TextContent" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>


    <style name="NewsHeading" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="BlueBoldHeadline" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/text_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="NewsPreview" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">#999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">0dip</item>
    </style>

    <style name="CoverImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">100dip</item>

        <item name="android:layout_marginBottom">0dip</item>
    </style>


</resources>
